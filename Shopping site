# Database Schema

CREATE TABLE products (
  id INT PRIMARY KEY,
  name VARCHAR(255),
  description TEXT,
  price DECIMAL(10, 2),
  image_url VARCHAR(255)
);

CREATE TABLE orders (
  id INT PRIMARY KEY,
  user_id INT,
  product_id INT,
  quantity INT,
  total DECIMAL(10, 2),
  created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE users (
  id INT PRIMARY KEY,
  username VARCHAR(255),
  email VARCHAR(255),
  password VARCHAR(255)
);


# PHP API Endpoints

// products.php
require_once 'db.php';

if ($_SERVER['REQUEST_METHOD'] === 'GET') {
  $products = getProducts();
  echo json_encode($products);
}

function getProducts() {
  $sql = 'SELECT * FROM products';
  $result = mysqli_query($db, $sql);
  $products = array();
  while ($row = mysqli_fetch_assoc($result)) {
    $products[] = $row;
  }
  return $products;
}

// orders.php
require_once 'db.php';

if ($_SERVER['REQUEST_METHOD'] === 'POST') {
  $user_id = $_POST['user_id'];
  $product_id = $_POST['product_id'];
  $quantity = $_POST['quantity'];
  $total = $_POST['total'];
  createOrder($user_id, $product_id, $quantity, $total);
  echo json_encode(array('message' => 'Order created successfully'));
}

function createOrder($user_id, $product_id, $quantity, $total) {
  $sql = 'INSERT INTO orders (user_id, product_id, quantity, total) VALUES (?, ?, ?, ?)';
  $stmt = mysqli_prepare($db, $sql);
  mysqli_stmt_bind_param($stmt, 'iiid', $user_id, $product_id, $quantity, $total);
  mysqli_stmt_execute($stmt);
}

// users.php
require_once 'db.php';

if ($_SERVER['REQUEST_METHOD'] === 'POST') {
  $username = $_POST['username'];
  $email = $_POST['email'];
  $password = $_POST['password'];
  createUser($username, $email, $password);
  echo json_encode(array('message' => 'User created successfully'));
}

function createUser($username, $email, $password) {
  $sql = 'INSERT INTO users (username, email, password) VALUES (?, ?, ?)';
  $stmt = mysqli_prepare($db, $sql);
  mysqli_stmt_bind_param($stmt, 'sss', $username, $email, $password);
  mysqli_stmt_execute($stmt);
}


# JavaScript and AJAX

// products.js
fetch('products.php')
  .then(response => response.json())
  .then(products => {
    const productGrid = document.querySelector('.product-grid');
    products.forEach(product => {
      const productCard = document.createElement('div');
      productCard.classList.add('product');
      productCard.innerHTML = `
        <img src="${product.image_url}" alt="${product.name}">
        <h3>${product.name}</h3>
        <p>Price: $${product.price}</p>
        <button>Add to Cart</button>
      `;
      productGrid.appendChild(productCard);
    });
  });

// cart.js
const cartButton = document.querySelector('.cart button');
cartButton.addEventListener('click', () => {
  const userId = localStorage.getItem('userId');
  const productId = localStorage.getItem('productId');
  const quantity = localStorage.getItem('quantity');
  const total = localStorage.getItem('total');
  fetch('orders.php', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
